sp {op_say*propose*report-success
   (state <s> ^name op_say1
              ^current-action.said true)
-->
   (<s> ^operator <o> + >)
   (<o> ^name report-success)
}

sp {op_say*apply*report-success*mark*heard*by*person
   (state <s> ^name op_say1
              ^operator.name report-success
              ^person <person>
              ^sentence-obj <msg>
              ^world.predicates.predicate <heard>)
   (<person> ^predicates.category person)
   (<heard> ^handle heard2)
   -{(<heard> ^instance <heard-i>)
     (<heard-i> ^1 <person> ^2 <msg>)}
-->
   (<heard> ^instance <i>)
   (<i> ^1 <person> ^2 <msg>)
}
