###############################################################################
#
# Inside the op_pick-up1 substate, this will put a reset command on the output link
# If the pick-up fails this will reset the arm
#
###############################################################################

sp {op_push1*fetch*propose*send-reset-command
   (state <s> ^name op_push1
              ^problem-space.action.type execute
              ^world.robot.arm.moving-status << failure home >>
             -^current-action.reset-command)
-->
   (<s> ^operator <o> +)
   (<o> ^name send-reset-command
        ^actions.reset <r>)
}

sp {op_push1*apply*send-push-command
   (state <s> ^name op_push1
              ^operator.name send-reset-command
              ^io.output-link <ol>
              ^current-action <a>)
-->
   (<ol> ^reset <r>)
   (<a> ^reset-command <r>)
}

sp {op_push1*apply*send-reset-command*remove*push-command
   (state <s> ^name op_push1
              ^operator.name send-reset-command
              ^current-action <a>
              ^io.output-link <out>)
   (<a> ^push-command <cmd>)
   (<out> ^push <cmd>)
-->
   (<a> ^push-command <cmd> -)
   (<out> ^push <cmd> -)
}
