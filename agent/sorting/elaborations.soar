sp {sorting-state*elaborate*problem-space
   (state <s> ^name sort-blocks)
-->
   (<s> ^problem-space <ps>)
   (<ps> ^perception <perc>)
   (<perc> ^attend-to-all-perception yes)
   (interrupt)
}

sp {sorting-state*elaborate*move-block-state
   (state <s> ^name move-block
              ^superstate.operator <o>)
   (<o> ^block <b>
        ^location <loc>)
-->
   (<s> ^block <b>
        ^location <loc>)
}