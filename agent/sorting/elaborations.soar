sp {sorting-state*elaborate*problem-space
   (state <s> ^name sort-blocks)
-->
   (<s> ^problem-space <ps>)
   (<ps> ^perception <perc>)
   (<perc> ^attend-to-all-perception yes)
}

sp {sorting-state*elaborate*move-block-state
   (state <s> ^name move-block
              ^superstate.operator <o>)
   (<o> ^block <b>
        ^location <loc>)
-->
   (<s> ^block <b>
        ^location <loc>)
}

sp {move-block*elaborate*volume-check
   (state <s> ^name move-block
              ^block-volume <v1>
              ^top-state.block-history <h>
              ^operator <o1> +
              ^operator <o2> +)
   (<h> ^action <a>)
   (<a> ^action-type move
	    ^failure grasping
        ^block-volume <v2> <= <v1>)
   (<o1> ^name choose-move)
   (<o2> ^name choose-push)
-->
   (<s> ^prev-failure true)
}