sp {move-block*test*prefer-move
   (state <s> ^name move-block
              ^block.predicates.color blue1
              ^operator <o1> +
              ^operator <o2> +)
   (<o1> ^name choose-move)
   (<o2> ^name choose-push)
-->
   (<s> ^operator <o1> > <o2>)
}

sp {move-block*test*prefer-push
   (state <s> ^name move-block
              ^block.predicates.color red1
              ^operator <o1> +
              ^operator <o2> +)
   (<o1> ^name choose-move)
   (<o2> ^name choose-push)
-->
   (<s> ^operator <o2> > <o1>)
}

sp {sort-blocks*prefer*attend-to-scene-change
   (state <s> ^name sort-blocks
              ^operator <o1> +
              ^operator <o2> +)
   (<o1> ^name attend-to-scene-change)
   (<o2> ^name move-block)
-->
   (<s> ^operator <o1> > <o2>)
}

sp {sort-blocks*prefer*finish-last-action
   (state <s> ^name sort-blocks
              ^operator <o1> +
              ^operator <o2> +)
   (<o1> ^name finish-last-action)
   (<o2> ^name move-block)
-->
   (<s> ^operator <o1> > <o2>)
}